---
const stats = [
  { number: "60+", label: "Years of Excellence" },
  { number: "48", label: "Luxury Rooms & Suites" },
  { number: "4.9", label: "Guest Rating" },
];

const welcomeImage = "https://images.unsplash.com/photo-1566073771259-6a8506099945";
---

<section id="welcome-section" class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      
      {/* Left Column - Text Content */}
      <div class="animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000 ease-out">
        <span class="block text-ocean font-body uppercase tracking-[0.2em] text-sm font-semibold mb-4">
          Discover Our Story
        </span>
        
        <h2 class="font-heading text-navy text-4xl md:text-5xl font-bold mb-6 leading-tight">
          A Timeless Retreat on the Water's Edge
        </h2>
        
        <div class="text-charcoal leading-relaxed space-y-6 mb-10 text-lg sm:text-base">
          <p>
            Nestled along the sun-kissed shores of the Atlantic coast, 
            Lighthouse Point Hotel has been a beacon of luxury hospitality since 1962. 
            Our historic property blends timeless coastal charm with modern elegance.
          </p>
          <p>
            From our award-winning restaurant to our world-class spa, 
            every detail has been thoughtfully curated to create moments that 
            linger long after your stay.
          </p>
        </div>

        {/* Feature Highlights */}
        <div class="flex flex-wrap gap-8 sm:gap-12 mb-10 border-t border-sand/30 pt-8">
          {stats.map((stat) => (
            <div class="flex flex-col">
              <span class="text-3xl sm:text-4xl font-heading text-gold font-bold mb-1">
                {stat.number}
              </span>
              <span class="text-xs sm:text-sm text-navy uppercase tracking-wide font-medium">
                {stat.label}
              </span>
            </div>
          ))}
        </div>

        {/* Learn More Link */}
        <a 
          href="/about" 
          class="inline-flex items-center gap-2 text-gold font-semibold uppercase tracking-wider text-sm group hover:text-navy transition-colors duration-300"
        >
          Learn Our Story
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" 
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      {/* Right Column - Image with Decorative Frame */}
      <div class="relative animate-on-scroll opacity-0 translate-y-8 transition-all duration-1000 ease-out delay-200">
        {/* Decorative Frame */}
        <div class="absolute top-5 left-5 w-full h-full border-2 border-gold rounded-lg -z-0"></div>
        
        {/* Image */}
        <div class="relative z-10 rounded-lg overflow-hidden shadow-xl aspect-[3/4] group">
          <img 
            src={welcomeImage} 
            alt="Lighthouse Point Hotel Interior" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          {/* Subtle overlay on hover */}
          <div class="absolute inset-0 bg-navy/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  // Simple Intersection Observer for scroll animations
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.remove('opacity-0', 'translate-y-8');
        entry.target.classList.add('opacity-100', 'translate-y-0');
        observer.unobserve(entry.target); // Only animate once
      }
    });
  }, observerOptions);

  document.querySelectorAll('.animate-on-scroll').forEach((el) => {
    observer.observe(el);
  });
</script>
