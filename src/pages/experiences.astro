---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const heroImage = "https://images.unsplash.com/photo-1507525428034-b723cf961d3e"; // Sunset beach
const spaImage1 = "https://images.unsplash.com/photo-1540555700478-4be289fbecef";
const spaImage2 = "https://images.unsplash.com/photo-1570172619644-dfd03ed5d881";
const spaImage3 = "https://images.unsplash.com/photo-1544161515-4ab6ce6db874";
const spaImage4 = "https://images.unsplash.com/photo-1596178060810-7d4cf2b224b0";
const waterImage = "https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1";
const lighthouseImg = "https://images.unsplash.com/photo-1502175353174-a7a70e73b362";
const wineArtImg = "https://images.unsplash.com/photo-1558618666-fcd25c85cd64";
const marketImg = "https://images.unsplash.com/photo-1488459716781-31db52582fe9";
---

<BaseLayout 
  title="Experiences | Lighthouse Point Hotel" 
  description="Discover curated experiences at Lighthouse Point Hotel. From spa treatments to water adventures and local explorations."
>
  <Header />

  <main>
    <!-- HERO SECTION -->
    <section class="relative h-[50vh] min-h-[400px] flex items-center justify-center overflow-hidden">
      <div 
        class="absolute inset-0 bg-cover bg-center z-0"
        style={`background-image: url('${heroImage}');`}
      >
      </div>
      <div class="absolute inset-0 bg-navy/50 z-10"></div>
      
      <div class="relative z-20 container mx-auto px-4 text-center text-white">
        <span class="block text-gold font-body uppercase tracking-[0.2em] text-sm font-semibold mb-4 animate-fade-up-1">
          Beyond The Room
        </span>
        <h1 class="font-heading text-4xl md:text-5xl lg:text-6xl font-bold mb-4 animate-fade-up-2">
          Curated Experiences
        </h1>
        <p class="text-sand text-lg md:text-xl font-light max-w-2xl mx-auto animate-fade-up-3">
          Create memories that last a lifetime
        </p>
      </div>
    </section>

    <!-- INTRO TEXT -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 text-center max-w-3xl">
        <p class="text-lg text-charcoal/80 leading-relaxed">
          At Lighthouse Point Hotel, we believe your stay should be an experience, not just a visit. Our team has curated a collection of activities and adventures to make every moment extraordinary.
        </p>
      </div>
    </section>

    <!-- SPA & WELLNESS SECTION -->
    <section class="py-24 bg-sand/20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
          
          <!-- Image Gallery (Left) -->
          <div class="w-full lg:w-1/2">
            <div class="grid grid-cols-2 gap-3">
              <img src={spaImage1} alt="Spa Treatment" class="w-full aspect-square object-cover rounded-lg shadow-md" loading="lazy" />
              <img src={spaImage2} alt="Relaxation Area" class="w-full aspect-square object-cover rounded-lg shadow-md" loading="lazy" />
              <img src={spaImage3} alt="Spa Interior" class="w-full aspect-square object-cover rounded-lg shadow-md" loading="lazy" />
              <img src={spaImage4} alt="Wellness Center" class="w-full aspect-square object-cover rounded-lg shadow-md" loading="lazy" />
            </div>
          </div>

          <!-- Text (Right) -->
          <div class="w-full lg:w-1/2">
            <h2 class="font-heading text-3xl md:text-4xl text-navy font-bold mb-6">
              Tidal Spa & Wellness Center
            </h2>
            <div class="text-charcoal/80 leading-relaxed mb-8 space-y-4">
              <p>
                Surrender to tranquility at our award-winning Tidal Spa. Inspired by the healing power of the ocean, our treatments blend ancient wellness traditions with modern techniques.
              </p>
              <p>
                Each therapy is designed to restore balance, rejuvenate your spirit, and reconnect you with the natural rhythms of the coast.
              </p>
            </div>

            <!-- Services List -->
            <div class="space-y-3 mb-8">
              <div class="flex justify-between items-center py-3 border-b border-sand/30">
                <div>
                  <span class="font-heading text-navy font-semibold">Ocean Stone Massage</span>
                  <span class="text-charcoal/60 text-sm ml-2">60 min</span>
                </div>
                <span class="text-gold font-bold">$185</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-sand/30">
                <div>
                  <span class="font-heading text-navy font-semibold">Seaweed Body Wrap</span>
                  <span class="text-charcoal/60 text-sm ml-2">90 min</span>
                </div>
                <span class="text-gold font-bold">$220</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-sand/30">
                <div>
                  <span class="font-heading text-navy font-semibold">Couples Coastal Retreat</span>
                  <span class="text-charcoal/60 text-sm ml-2">120 min</span>
                </div>
                <span class="text-gold font-bold">$450</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-sand/30">
                <div>
                  <span class="font-heading text-navy font-semibold">Meditation Garden Session</span>
                  <span class="text-charcoal/60 text-sm ml-2">45 min</span>
                </div>
                <span class="text-gold font-bold">$75</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-sand/30">
                <div>
                  <span class="font-heading text-navy font-semibold">Hydrotherapy Circuit</span>
                  <span class="text-charcoal/60 text-sm ml-2">60 min</span>
                </div>
                <span class="text-gold font-bold">$95</span>
              </div>
            </div>

            <p class="text-sm text-charcoal/60 mb-6">Hours: Daily 8:00 AM - 8:00 PM</p>
            <a href="#" class="btn-primary inline-block">Book a Treatment</a>
          </div>

        </div>
      </div>
    </section>

    <!-- WATER ACTIVITIES SECTION -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col-reverse lg:flex-row items-center gap-12 lg:gap-16">
          
          <!-- Text (Left) -->
          <div class="w-full lg:w-1/2">
            <h2 class="font-heading text-3xl md:text-4xl text-navy font-bold mb-6">
              Ocean Adventures
            </h2>
            <p class="text-charcoal/80 leading-relaxed mb-8">
              Dive into adventure with our curated water activities. Whether you're seeking serenity or adrenaline, the Atlantic offers endless possibilities for exploration and connection with nature.
            </p>

            <!-- Activities Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
              
              <div class="bg-sand/10 rounded-lg p-5 border border-sand/20 hover:border-gold/30 transition-all">
                <div class="text-3xl mb-3">üö£</div>
                <h3 class="font-heading text-lg text-navy font-bold mb-1">Sunrise Kayaking</h3>
                <p class="text-gold font-bold mb-2">$65/person</p>
                <a href="#" class="text-ocean text-sm hover:text-gold transition-colors font-medium">Book ‚Üí</a>
              </div>

              <div class="bg-sand/10 rounded-lg p-5 border border-sand/20 hover:border-gold/30 transition-all">
                <div class="text-3xl mb-3">‚õµ</div>
                <h3 class="font-heading text-lg text-navy font-bold mb-1">Sunset Sailing</h3>
                <p class="text-gold font-bold mb-2">$120/person</p>
                <a href="#" class="text-ocean text-sm hover:text-gold transition-colors font-medium">Book ‚Üí</a>
              </div>

              <div class="bg-sand/10 rounded-lg p-5 border border-sand/20 hover:border-gold/30 transition-all">
                <div class="text-3xl mb-3">ü§ø</div>
                <h3 class="font-heading text-lg text-navy font-bold mb-1">Snorkeling Excursion</h3>
                <p class="text-gold font-bold mb-2">$85/person</p>
                <a href="#" class="text-ocean text-sm hover:text-gold transition-colors font-medium">Book ‚Üí</a>
              </div>

              <div class="bg-sand/10 rounded-lg p-5 border border-sand/20 hover:border-gold/30 transition-all">
                <div class="text-3xl mb-3">üé£</div>
                <h3 class="font-heading text-lg text-navy font-bold mb-1">Deep Sea Fishing</h3>
                <p class="text-gold font-bold mb-2">$250/person</p>
                <a href="#" class="text-ocean text-sm hover:text-gold transition-colors font-medium">Book ‚Üí</a>
              </div>

              <div class="bg-sand/10 rounded-lg p-5 border border-sand/20 hover:border-gold/30 transition-all sm:col-span-2">
                <div class="text-3xl mb-3">üèÑ</div>
                <h3 class="font-heading text-lg text-navy font-bold mb-1">Paddleboard Yoga</h3>
                <p class="text-gold font-bold mb-2">$55/person</p>
                <a href="#" class="text-ocean text-sm hover:text-gold transition-colors font-medium">Book ‚Üí</a>
              </div>

            </div>

            <a href="#" class="px-6 py-3 border border-navy text-navy font-semibold rounded hover:bg-navy hover:text-white transition-all duration-300 inline-block">
              View All Activities
            </a>
          </div>

          <!-- Image (Right) -->
          <div class="w-full lg:w-1/2">
            <div class="relative rounded-lg overflow-hidden shadow-xl aspect-[4/3]">
              <img src={waterImage} alt="Ocean Activities" class="w-full h-full object-cover" loading="lazy" />
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- LOCAL EXPLORATIONS SECTION -->
    <section class="py-24 bg-sand/20">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-heading text-3xl md:text-4xl text-navy font-bold text-center mb-12">
          Local Explorations
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          <!-- Card 1: Lighthouse Tour -->
          <div class="group bg-white rounded-xl overflow-hidden shadow-lg hover:-translate-y-2 transition-all duration-300 flex flex-col">
            <div class="h-64 overflow-hidden">
              <img src={lighthouseImg} alt="Historic Lighthouse" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
            </div>
            <div class="p-8 flex-1 flex flex-col">
              <h3 class="font-heading text-2xl text-navy font-bold mb-3">Lighthouse Tour</h3>
              <p class="text-charcoal/70 mb-4 flex-1">
                Explore the historic lighthouse that gives our hotel its name. Learn about maritime history and enjoy panoramic coastal views.
              </p>
              <div class="text-sm text-charcoal/60 mb-2">Duration: 2 hours</div>
              <div class="text-gold font-bold font-heading text-lg">Free for guests</div>
            </div>
          </div>

          <!-- Card 2: Wine & Art Walk -->
          <div class="group bg-white rounded-xl overflow-hidden shadow-lg hover:-translate-y-2 transition-all duration-300 flex flex-col">
            <div class="h-64 overflow-hidden">
              <img src={wineArtImg} alt="Wine and Art" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
            </div>
            <div class="p-8 flex-1 flex flex-col">
              <h3 class="font-heading text-2xl text-navy font-bold mb-3">Wine & Art Walk</h3>
              <p class="text-charcoal/70 mb-4 flex-1">
                Stroll through downtown galleries with curated wine tastings at each stop. A perfect blend of culture and coastal charm.
              </p>
              <div class="text-sm text-charcoal/60 mb-2">Duration: 3 hours</div>
              <div class="text-gold font-bold font-heading text-lg">$95/person</div>
            </div>
          </div>

          <!-- Card 3: Farmers Market Morning -->
          <div class="group bg-white rounded-xl overflow-hidden shadow-lg hover:-translate-y-2 transition-all duration-300 flex flex-col">
            <div class="h-64 overflow-hidden">
              <img src={marketImg} alt="Farmers Market" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy" />
            </div>
            <div class="p-8 flex-1 flex flex-col">
              <h3 class="font-heading text-2xl text-navy font-bold mb-3">Farmers Market Morning</h3>
              <p class="text-charcoal/70 mb-4 flex-1">
                Join Chef Marco on a Saturday morning market tour. Discover local ingredients and learn the secrets behind our farm-to-table cuisine.
              </p>
              <div class="text-sm text-charcoal/60 mb-2">Duration: 2 hours</div>
              <div class="text-gold font-bold font-heading text-lg">$45/person</div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- SEASONAL HIGHLIGHT -->
    <section class="py-24 bg-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg width=\'100\' height=\'100\' viewBox=\'0 0 100 100\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M0 50 Q 25 30, 50 50 T 100 50\' stroke=\'%231B2A4A\' fill=\'none\' stroke-width=\'0.5\'/%3E%3C/svg%3E'); background-size: 200px 100px;"></div>
      
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <span class="inline-block bg-gold text-white text-xs font-bold px-4 py-1.5 rounded-full uppercase tracking-wider mb-6">
          Currently Featured
        </span>
        <h2 class="font-heading text-4xl md:text-5xl text-navy font-bold mb-6">
          Summer Sunset Series
        </h2>
        <p class="text-lg text-charcoal/80 max-w-2xl mx-auto mb-8 leading-relaxed">
          Every Friday in June through August, enjoy live music, craft cocktails, and stunning sunsets on our oceanfront terrace. An evening of coastal elegance you won't want to miss.
        </p>
        <a href="#" class="btn-primary inline-block mb-4">Learn More</a>
        <p class="text-sm text-charcoal/50 uppercase tracking-wider">
          June 7 ‚Äî August 30, 2024 ¬∑ 5:00 PM ‚Äî 9:00 PM
        </p>
      </div>
    </section>

    <!-- BOTTOM CTA -->
    <section class="py-16 bg-navy text-center">
      <div class="container mx-auto px-4">
        <h2 class="font-heading text-3xl md:text-4xl text-white font-bold mb-4">
          Ready to Plan Your Experience?
        </h2>
        <p class="text-sand text-lg mb-8 max-w-2xl mx-auto">
          Our concierge team is here to create your perfect itinerary.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/contact" class="btn-primary inline-flex items-center justify-center min-w-[200px]">
            Contact Concierge
          </a>
          <span class="text-white/60">or</span>
          <a href="tel:+19545550123" class="text-white hover:text-gold transition-colors font-medium">
            Call (954) 555-0123
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</BaseLayout>

<style>
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-up-1 {
    animation: fadeUp 0.8s ease-out forwards;
    opacity: 0;
  }
  
  .animate-fade-up-2 {
    animation: fadeUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }

  .animate-fade-up-3 {
    animation: fadeUp 0.8s ease-out forwards;
    animation-delay: 0.4s;
    opacity: 0;
  }
</style>
